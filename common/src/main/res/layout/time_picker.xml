<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/line1"
        android:layout_width="2dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:background="@drawable/time_deiver_line"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp" />

    <com.example.hcm.retrofit.commenView.QNumberPicker
        android:id="@+id/number_pick1"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/line1"
        android:layout_toRightOf="@id/line1" />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="2dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/number_pick1"
        android:layout_toRightOf="@id/number_pick1"
        android:background="@drawable/time_deiver_line" />

    <com.example.hcm.retrofit.commenView.QNumberPicker
        android:id="@+id/number_pick2"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/line2"
        android:layout_toRightOf="@id/line2" />

    <ImageView
        android:id="@+id/line3"
        android:layout_width="2dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/number_pick2"
        android:layout_toRightOf="@id/number_pick2"
        android:background="@drawable/time_deiver_line" />

    <ImageView
        android:layout_width="323dp"
        android:layout_height="39dp"
        android:background="@drawable/icon_select_time_bg"
        android:layout_centerVertical="true"/>
</RelativeLayout>